<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.skippy"
       version="1.0.5"
       name="Skippy"
       provider-name="Elky">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.service" library="resources/lib/service.py" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Skip intro/credits using jellyfin intro-skipper chapters.xml</summary>
        <description lang="en_GB">Reads intro-skipper (https://github.com/intro-skipper/intro-skipper) chapter files and gives the option to skip into/credits</description>
        <platform>all</platform>
    </extension>
    <news>
        v1.0.5 (2025-07-28)
        - Added the Skip button
    </news>
</addon>
